<br />

<div class="booyah-box col-10 offset-1">
  <h1 class="text-center">Learn wizardry today</h1>
  <hr />

  <% if @courses %>
    <% @courses.each do |course| %>
      <div class="row">
        <div class="col-sm-8 col-12">
          <h2>
            <%= link_to course.title, course_path(course), style: 'color: #000000' %>
          </h2>
          <% if course.image.present? %>
            <%= image_tag course.image.url, class: 'img-fluid' %>
          <% end %>
      </div>

      <br class="clr" />
        <div class="col-sm-4 col-12 text-center">
          <br /><br />
          <%= course.description %>
          <br /><br /><br /><br />
          <%= link_to 'More Details...', course_path(course), class: 'btn btn-dark btn-large' %>
        </div>
      </div>
      <br class="clr" />
    <% end %>
  <% end %>
</div>