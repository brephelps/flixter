<br />

<div class="booyah-box col-10 offset-1">
  <div class ="row">
    <div class="col-sm-4 col-12 text-center">
      <br /><br />
      <h1><%= @course.title %></h1>
      <br />
      <span class="badge badge-default">
        <%= number_to_currency @course.cost %>
      </span>

      <% if current_user && current_user == @course.user %>
        <br />
        <br />
        <%= link_to 'Administer', instructor_course_path(@course), class: 'btn btn-danger btn-large' %>
      <% end %>

      <br />
      <br />
      <% if current_user %>
        <% if current_user.enrolled_in?(@course) %>
          <h3 class="badge badge-secondary">You Are Enrolled!</h3>
        <% else %>
          <% if @course.free? %>
            <%= link_to 'Enroll', course_enrollments_path(@course), class: 'btn btn-warning', method: :post %>
          <% else %>
            <%= form_tag course_enrollments_path(@course) do %>
              <script src="https://checkout.stripe.com/checkout.js" class="stripe-button"
                      data-key="<%= Rails.configuration.stripe[:publishable_key] %>"
                      data-email="<%= current_user.email %>"
                      data-description="<%= @course.title %> (<%= number_to_currency @course.cost %>)"
                      data-amount="<%= (@course.cost * 100).to_i %>"
                      data-locale="auto"></script>
            <% end %>
          <% end %>
        <% end %>
      <% else %>
        <h3 class="badge badge-warning">Sign In to Enroll!</h3>
      <% end %>
    </div>
    <div class="col-sm-8 col-12"> 
      <% if @course.image.present? %>
        <%= image_tag @course.image.url, class: 'img-fluid' %>
      <% end %>
      <br /><br />
      <%= @course.description %>
    </div>
  </div>

  <br class="clr" />

  <div class="col-12">
    <% @course.sections.rank(:row_order).each do |section| %>
      <br /><br />
      <div class="section">
        <h3>
          <%= section.title %>
        </h3>
        <div class="row">
          <% section.lessons.rank(:row_order).each do |lesson| %>
            <div class="col-12 col-sm-6">
              <% if current_user.house == 'gryffindor' %>
                <div class="gryffindor text-center">
              <% elsif current_user.house == 'slytherin' %>
                <div class="slytherin text-center">
              <% elsif current_user.house == 'hufflepuff' %>
                <div class="hufflepuff text-center">
              <% elsif current_user.house == 'ravenclaw' %>
                <div class="ravenclaw text-center">
              <% end %>
                <br />
                <%= link_to lesson_path(lesson) do %>
                  <%= lesson.title %>
                  <br />
                  <%= lesson.subtitle %>
                <% end %>
              </div>
            </div>
          <% end %>
        </div>
        <br class="clr" />
      </div>
    <% end %>
  </div>
</div>
