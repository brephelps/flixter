<br />

<div class="booyah-box col-10 offset-1">
  <% if current_user.house == 'gryffindor' %>
    <div class="gryffindor">
  <% elsif current_user.house == 'slytherin' %>
    <div class="slytherin">
  <% elsif current_user.house == 'hufflepuff' %>
    <div class="hufflepuff">
  <% elsif current_user.house == 'ravenclaw' %>
    <div class="ravenclaw">
  <% end %>

    <% if current_user.enrolled_courses.present? %>
      <h1>What I'm Learning</h1>
      <% current_user.enrolled_courses.each do |course| %>
        <h3 class="text-center">
          <%= link_to course.title, course_path(course) %>
        </h3>
        <br />
        <% if course.image.present? %>
          <div class="image">
            <%= image_tag course.image.url, class: 'img-fluid' %>
          </div>
        <% end %>
        <br />
        <div class="row">
          <div class="col-12 col-sm-7 offset-1">
            <%= course.description %>
          </div>
          <div class="col-12 col-sm-4 text-center">
            <%= link_to "More Info...", course_path(course), class: 'btn btn-lg btn-dark' %>
          </div>
        </div>
        <hr class="col-8 offset-2">
        <br class="clr" />
      <% end %>
    <% end %>


    <% if current_user.courses.present? %>
      <h1>What I'm Teaching</h1>
      <% current_user.courses.each do |course| %>
        <h3 class="text-center">
          <%= link_to course.title, course_path(course) %>
        </h3>
        <br />
        <% if course.image.present? %>
          <div class="image">
            <%= image_tag course.image.url, class: 'img-fluid' %>
          </div>
        <% end %>
        <br />
        <div class="row">
          <div class="col-12 col-sm-7 offset-1">
            <%= course.description %>
          </div>
          <div class="col-12 col-sm-4 text-center">
            <%= link_to "More Info...", course_path(course), class: 'btn btn-lg btn-dark' %>
          </div>
        </div>
        <hr class="col-8 offset-2">
        <br class="clr" />
      <% end %>
    <% end %>

  <% if current_user.house == 'gryffindor' %>
    </div>
  <% elsif current_user.house == 'slytherin' %>
    </div>
  <% elsif current_user.house == 'hufflepuff' %>
    </div>
  <% elsif current_user.house == 'ravenclaw' %>
    </div>
  <% end %>
</div>
